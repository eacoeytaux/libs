# Ethan's git aliases/functions

# if not running interactively then don't do anything
[[ $- != *i* ]] && return;

# default main branch to "master" unless variable is set locally
[[ -z $git_main_branch ]] && git_main_branch="master";

# aliases

# shorthand aliases
alias g="git ";
alias gl="git log ";
alias gs="git status ";
alias gb="git branch ";
alias gbc="git branch-current ";
alias gc="git checkout ";
alias gd="git diff ";
alias gg="git grep --color=auto -n -i ";

function alias-git {
    git config --global alias.$1 "!${@:2}"
}; export -f alias-git;

alias-git new "git latest && git checkout -b"
alias-git branch-current "git branch | grep '\* ' | cut -d '*' -f2 | cut -c2-"
alias-git checkout-latest "git checkout $git_main_branch && git pull origin $git_main_branch"
alias-git commit-all "git add -A && git commit -m"
alias-git push-upstream "git push --set-upstream origin \$(git branch-current)"
alias-git rebase-since "git rebase -i HEAD~\$(git cherry -v $git_main_branch | wc -l)"
alias-git list-aliases "git config --get-regexp ^alias | cut -c7- | sed -e 's/ !/ "/g' -e 's/^/git /g' -e 's/$/"/g' | sort"

# -- aliases for this file --

alias srcbgit="source <(curl -sN https://raw.githubusercontent.com/eacoeytaux/libs/master/bash_git)";
alias viewbgit="view <(curl -sN https://raw.githubusercontent.com/eacoeytaux/libs/master/bash_git)";
alias catbgit="curl -sN https://raw.githubusercontent.com/eacoeytaux/libs/master/bash_git";

